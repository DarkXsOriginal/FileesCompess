        <TextBlock x:Name="tbSource" HorizontalAlignment="Center" Margin="0,201,0,0" TextWrapping="Wrap" Text="(Входная папка)" VerticalAlignment="Top" Width="124"/>
        <Button x:Name="btSource" Content="Обзор..." HorizontalAlignment="Left" Margin="477,195,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.479,0.604" Width="45" Click="btSource_Click"/>
            <ComboBox x:Name="cmbQuality" HorizontalAlignment="Left" Margin="353,131,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbQuality_SelectionChanged" RenderTransformOrigin="0.234,1.005" />
    </Grid>
</Window>
