        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CmpFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btCompress" Content="Cжать" HorizontalAlignment="Left" Margin="361,286,0,0" VerticalAlignment="Top" Width="104" Click="btCompress_Click"/>
